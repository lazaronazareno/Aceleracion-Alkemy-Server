{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "overrides": [
    {
        "files": "*.{js,jsx,tsx,ts,scss,json,html}",
        "options": {
            "tabWidth": 2
        }
    }
  ]
}